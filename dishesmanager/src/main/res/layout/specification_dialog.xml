<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="编辑规格"
        android:textSize="22dp"
        android:textColor="@color/md_black_1000"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="@color/grey_color4"
        />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="主菜品 : "
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="18dp"
                />
            <AutoCompleteTextView
                android:id="@+id/dialog_speciflcation_maindishes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/animselect"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="副菜品 : "
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="18dp"

                />
            <AutoCompleteTextView
                android:id="@+id/dialog_speciflcation_deputydishes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/animselect"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="倍    数 : "
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="18dp"
                />
            <EditText
                android:id="@+id/dialog_speciflcation_multiple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/animselect"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_speciflcation_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/animselect"
            android:text="取消"
            android:layout_margin="8dp"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/dialog_speciflcation_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="确定"
            android:background="@drawable/animtableclick"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
    </LinearLayout>

</LinearLayout>